
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}


body {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #f9f9f9; /* Soft neutral gray */
  color: #2c3e50; /* Deep charcoal blue */
  padding: 5vw;
  line-height: 1.6;
  font-size: 1.2em;
}


header {
  background-color: #3c8d94; /* Muted teal */
  color: #fff;
  text-align: center;
  padding: 2vh 5vw;
  border-radius: 1vw;
  box-shadow: 0 4px 6px rgba(0,0,0,0.1);
}

header h1 {
  font-size: 6vw;
}


main {
  margin-top: 3vh;
}


section {
  margin-bottom: 4vh;
}


.gallery h2 {
  font-size: 5vw;
  margin-bottom: 2vh;
}


a {
  display: inline-block;
  text-decoration: none;
  transition: all 0.3s ease;
  border-radius: 1vw;
}

a:hover {
  background-color: #fbc687; /* Hover highlight */
  padding: 0.5vh;
}


img {
  max-width: 100%;
  height: auto;
  border-radius: 1vw;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}


footer {
  background-color: #2e4a62; /* Slate blue */
  color: #fff;
  text-align: center;
  padding: 2vh 0;
  margin-top: 4vh;
  border-radius: 1vw;
}


@media (min-width: 600px) {
  body {
    font-size: 1.4em;
  }

  .gallery {
    display: flex;
    justify-content: center;
    gap: 3vw;
  }

  .gallery img {
    width: 40%;
  }
}
